{% extends 'base.html.twig' %}
{% block body %}
{{parent()}}
			





<div class="mpl-box-md">
        <div class="container">
            <ul class="mpl-isotope-options" data-sr="option" data-sr-origin="left" data-sr-interval="100"
                data-sr-duration="1000" data-sr-distance="10">
                
            </ul>
            <div class="mpl-isotope-grid row hgap-xs vgap-md" data-sr="product" data-sr-interval="120"
                 data-sr-duration="1200" data-sr-distance="20">

    <h1>My Orders</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nbproduit</th>
                <th>Date</th>
                <th>Methodedepaiement</th>
                <th>Etat</th>
                <th>Prixtotale</th>
            
            </tr>
        </thead>
        <tbody>
        {% for commande in user.commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.Nbproduit }}</td>
                <td>{{ commande.Date ? commande.Date|date('Y-m-d') : '' }}</td>
                <td>{{ commande.Methodedepaiement }}</td>
                <td>{{ commande.Etat }}</td>
                <td>{{ commande.Prixtotale }}</td>
              
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   
{% endblock %}
