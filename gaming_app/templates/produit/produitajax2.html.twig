
    {% for produit in produits %}
        <tr>
           
            <td>{{ produit.Nom }}</td>
            <td>{{ produit.Prix }}</td>
            <td><img src="{{ asset('uploads/photos/'~produit.Image) }}" WIDTH=150 HEIGHT=120 alt=""></td>
            <td>{{ produit.Quantite }}</td>
         
            <td>
                <a href="{{ path('produit_show', {'id': produit.id}) }}">show</a>
                <a href="{{ path('produit_edit', {'id': produit.id}) }}" >edit</a>
                <a href="{{ path('produit_promotion', {'id': produit.id}) }}" >promotion</a>
  
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6">no records found</td>
        </tr>
    {% endfor %}
