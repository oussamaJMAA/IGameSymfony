{% extends 'base.html.twig' %}
{% block title %}Games{% endblock %}

{% block body %}
{{parent()}}
    <div class="mpl-box-md">
        <div class="container">
            <ul class="mpl-isotope-options" data-sr="option" data-sr-origin="left" data-sr-interval="100"
                data-sr-duration="1000" data-sr-distance="10">
              
            </ul>
            <div class="mpl-isotope-grid row hgap-xs vgap-md" data-sr="product" data-sr-interval="120"
                 data-sr-duration="1200" data-sr-distance="20">
                {% for p in products %}
                    <div class="mpl-isotope-item col-12 col-sm-6 col-md-4">
                        <a href="#" class="mpl-product-item"
                           data-sr-item=product>
<span class="mpl-product-image">
<span class="mpl-image">
<img src="{{ asset('uploads/photos/' ~ p.image) }}"  width ="200px" height="200px"alt="">
</span>
</span>

                            <span class="mpl-product-title h4">{{ p.nom }}</span>

                            <span class="mpl-price">  </span>
                            </span>
                            <span class="mpl-product-content">
                        </a>
                    </div>
                {% endfor %}
                <div class="navigation">
                  
                </div>
            </div>
        </div>
    </div>
{% endblock %}
