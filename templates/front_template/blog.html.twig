{% extends "front_template/baseFront.html.twig" %}



{% block stat %}

	<article>
		<h2>{{ publication.titre }}</h2>
		<div class="metadata">
			Ecrit le
			{{ publication.createdAt | date('d/m/Y') }}
			a
			{{publication.createdAt | date('H:i')}}</div>
		<div class="content">
			<img src="{{ publication.image }}" alt="">
			<p>{{ publication.contenu }}</p>
		</div>
		<a href="{{ path('delete_blogg', {'id': publication.id}) }}" class="btn btn-primary">Supprimer </a>
		<a href="{{ path('blof_edit', {'id': publication.id}) }}" class="btn btn-primary">Modifier </a>
		<a href="{{ path('jdida', {'id': publication.id}) }}" class="btn btn-primary"  >Ajouter commentaire </a>
		

		
		
	</article>

	<section id="commmentaires">
		{% for comment in publication.comments  %}
			<div class="comment">
				<div class="row">
					<div class="col-2">
					
						{{comment.auteur}} <small>
							({{comment.createdAt | date('d/m/Y')}} {{comment.createdAt | date('H:i')}}
                            
						</small>):
                    
					</div>
					<div class="col1">
					<label>{{ comment.contenu }}</label>
				
							<a href="{{ path('app_comment_editt', {'id': comment.id}) }}" class="btn btn-success">Modifier commentaire </a>
				<a href="{{ path('app_comment_deletee', {'id': comment.id}) }}" class="btn btn-danger">supprimer commentaire </a>

					
					</div>
			
				</div>
			</div>
		{% endfor %}

	</section>
{% endblock %}
